<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/item_main_grid_view_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/new_song" />

        <TextView
            android:id="@+id/item_main_grid_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/tag_icon"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="2015万"
            android:textColor="@color/white"
            android:textSize="11sp"
            />

        <ImageView
            android:id="@+id/item_main_grid_view_is_song"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/item_main_grid_view_count"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_main_grid_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="false"
        android:text="123213213213123213213324324324123"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/tab_indicator_text_unselected"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/item_main_grid_view_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/tag_icon"
            android:text="中国好声音"
            android:textColor="@color/tab_indicator_text_unselected"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/item_main_grid_view_Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99.9"
            android:textColor="@color/tab_indicator_text_unselected"
            android:layout_alignBottom="@+id/item_main_grid_view_tag"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="11sp"
            />
    </RelativeLayout>
</LinearLayout>
