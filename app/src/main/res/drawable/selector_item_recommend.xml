<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/item_background_select"/>
    <!-- 触摸模式下单击时的背景图片 -->
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@color/item_background_select"/>
    <!-- 选中时的图片背景 -->
    <item android:state_selected="true" android:drawable="@color/item_background_select"/>
    <!-- 获得焦点时的图片背景 -->
    <item android:state_focused="true" android:drawable="@color/item_background_select"/>
    <!-- 是否响应所有事件-->
    <item android:state_enabled="true" android:drawable="@color/item_background"/>
    

</selector>